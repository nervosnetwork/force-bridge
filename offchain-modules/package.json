{
  "name": "force-bridge",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "ts-node ./packages/app-relayer/src/index.ts",
    "rpc": "ts-node ./packages/app-rpc-server/src/index.ts",
    "rpc-test": "ts-node ./packages/scripts/src/integration-test/rpc.ts",
    "demo": "ts-node-dev scripts/src/demo.ts",
    "build": "lerna run build",
    "test": "ava",
    "lint": "run-p check:prettier check:eslint",
    "lint-staged": "eslint --fix $(git diff --cached --staged --name-only --relative | grep -E \"(.ts$)\")",
    "fix": "run-p fix:prettier fix:eslint",
    "fix:eslint": "eslint --fix --format=pretty 'packages/*/src/**/*.ts'",
    "fix:prettier": "prettier --write .",
    "watch:start": "ts-node-dev --respawn --transpile-only ./packages/apps/relayer/index.ts",
    "check:prettier": "prettier -c .",
    "check:eslint": "yarn eslint --format=pretty 'packages/*/src/**/*.ts'",
    "clean": "rimraf lumos_db dist force-bridge.sqlite",
    "eth-test": "ts-node ./packages/scripts/src/integration-test/eth.ts",
    "eos-test": "ts-node ./packages/scripts/src/integration-test/eos.ts",
    "tron-test": "ts-node ./packages/scripts/src/integration-test/tron.ts",
    "prepare-xchain-test": "sleep 2",
    "btc-test": "ts-node ./packages/scripts/src/integration-test/btc.ts",
    "xchain-test": "run-s prepare-xchain-test eth-test btc-test eos-test tron-test",
    "integration-test": "run-p -r start xchain-test",
    "ci": "run-s clean build deploy integration-test",
    "test:unit": "nyc --silent ava",
    "cov": "run-s build test:unit",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "deploy": "ts-node-dev ./packages/scripts/src/deploy_ckb.ts",
    "prepare": "cd .. && husky install offchain-modules/.husky"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@nervosnetwork/ckb-types": "^0.39.0",
    "@types/jest": "^26.0.19",
    "@types/lodash": "^4.14.169",
    "@types/log4js": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "ava": "^3.15.0",
    "codecov": "^3.8.1",
    "eslint": "^7.22.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-tsc": "^2.0.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pm2": "^4.5.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@ckb-lumos/base": "^0.16.0",
    "@ckb-lumos/indexer": "^0.16.0",
    "@ckb-lumos/rpc": "^0.16.0",
    "@lay2/pw-core": "^0.3.22",
    "@nervosnetwork/ckb-sdk-core": "^0.39.0",
    "@types/node": "^15.0.2",
    "axios": "^0.21.1",
    "bitcore-lib": "^8.25.7",
    "ckb-js-toolkit": "^0.10.2",
    "commander": "^7.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eosjs": "^22.0.0-rc2",
    "eosjs-api": "^7.0.4",
    "ethers": "^5.0.32",
    "json-rpc-2.0": "^0.2.16",
    "lodash": "^4.17.20",
    "log4js": "^6.3.0",
    "mysql2": "^2.2.5",
    "nconf": "^0.11.2",
    "node-fetch": "^1.7.3",
    "reflect-metadata": "^0.1.13",
    "rpc-bitcoin": "^2.0.0",
    "sqlite3": "^5.0.2",
    "trongrid": "^1.2.6",
    "tronweb": "^3.2.3",
    "typeorm": "^0.2.32",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "ava": {
    "files": [
      "packages/*/src/**/test/**/*.ts",
      "packages/*/src/**/*.spec.ts",
      "!packages/*/src/**/helper.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "npm run lint-staged",
      "git add"
    ]
  }
}

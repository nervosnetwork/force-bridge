{
  "name": "@force-bridge/xchain-eth",
  "version": "0.0.15",
  "main": "dist",
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn run build",
    "test": "yarn run build",
    "codegen-forcebridge": "typechain --target=ethers-v5 --out-dir src/generated/contracts/ForceBridge ../x/src/xchain/eth/abi/ForceBridge.json",
    "codegen-assetmanager": "typechain --target=ethers-v5 --out-dir src/generated/contracts/AssetManager ../x/src/xchain/eth/abi/AssetManager.json",
    "patch-typechain": "node scripts/patch-typechain.js",
    "postinstall": "npm run codegen-forcebridge && npm run codegen-assetmanager && npm run patch-typechain"
  },
  "dependencies": {
    "@force-bridge/ckb-indexer-client": "^0.0.15",
    "@force-bridge/reconc": "^0.0.15",
    "@force-bridge/x": "^0.0.15",
    "@typechain/ethers-v5": "^7.0.0",
    "rxjs": "^7.1.0",
    "typechain": "^5.0.0"
  },
  "peerDependencies": {
    "@nervosnetwork/ckb-sdk-core": "^0.101.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
